{
  "version": "1.0",
  "defaultProvider": "azure",
  "scm": {
    "type": "git"
  },
  "container": {
    "enabled": false
  },
  "runtime": {
    "version": "3.11"
  },
  "startup": {
    "command": "bash startup.sh"
  },
  "environment": {
    "PYTHONPATH": "/home/site/wwwroot",
    "FLASK_APP": "backend/app.py",
    "FLASK_ENV": "production",
    "SCM_DO_BUILD_DURING_DEPLOYMENT": "true"
  }
}